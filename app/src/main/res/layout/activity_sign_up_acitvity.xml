<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.vienna.relja.myapp.SignUpActivity"
    android:id="@+id/random">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="12"
        android:rowCount="21"
        android:id="@+id/gridLayout">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="12" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="12"
            android:password="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:layout_columnSpan="12"
            android:layout_column="0"
            android:layout_row="2" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_column="0"
            android:layout_columnSpan="12"
            android:layout_row="3"
            android:capitalize="sentences" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/lastname"
            android:layout_column="0"
            android:layout_columnSpan="12"
            android:layout_row="4"
            android:capitalize="sentences" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_signUp"
            android:id="@+id/button_singUp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="12"
            android:layout_gravity="center_horizontal"
            android:onClick="button_signUp_click" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="93dp"
            android:text="New Text"
            android:id="@+id/text_view"
            android:layout_column="0"
            android:layout_columnSpan="12"
            android:layout_row="8"
            android:layout_rowSpan="10" />
    </GridLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/gridLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="754dp"
        android:layout_marginStart="754dp"
        android:layout_marginBottom="116dp"></TableLayout>
</RelativeLayout>
